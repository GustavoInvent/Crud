@model Crud.Domain.DadosCliente

@{
    ViewData["Title"] = "Cadastrar";
}


<h1 class="text-center">Cadastrar Novo Cliente</h1>

<hr />
<body>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>

                <input asp-for="Nome" required maxlength="30" class="form-control" 
                placeholder = "Informe o Nome do Usuário"  minlength="2" 
                 type="text" pattern="([aA-zZ]+)" placeholder="Apenas letras" />

                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>

                <input asp-for="Email"  required maxlength="30" class="form-control" 
                 placeholder="exemplo@gamai.com" type="email"/>

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>

                <input asp-for="Celular" type="text" required maxlength="11" minlength="11" 
                class="form-control" placeholder = "(00) 0 0000-0000"
                 onkeypress="return event.charCode >= 48 && event.charCode <= 57"/>

                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>

                <input asp-for="CPF" type="text" required maxlength="11" minlength="11"  class="form-control"
                placeholder = "000.000.000-00" 
                onkeypress="return event.charCode >= 48 && event.charCode <= 57" />

                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="Salvar" class="btn btn-success" 
                role ="button" asp-controller = "DadosClienteWEB" asp-action = "NovoCadastro" />  

            </div>
           
        </form>
    </div>
</div>
</body>
<body>

    <a type="button" class="btn btn-primary" role ="button" asp-controller = "DadosClienteWEB" 
    asp-action = "Cadastrados">Cancelar</a>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}
