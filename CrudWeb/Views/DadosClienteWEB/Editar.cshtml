@model Crud.Domain.DadosCliente

@{
    ViewData["Title"] = "Editar";
}

<h4>Dados do Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>

                <input asp-for="Nome" required maxlength="30" class="form-control" minlength="2" 
                 type= "text" pattern="([aA-zZ]+)" />

                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>

                <input asp-for="Email" required maxlength="30" class="form-control" type="email" />

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>

                <input asp-for="Celular" type="text" required maxlength="11" minlength="11" class="form-control"
                onkeypress="return event.charCode >= 48 && event.charCode <= 57"/>

                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>

                <input asp-for="CPF" type="text" class="form-control cpf-mask"
                 maxlength="11" minlength="11" class="form-control"
                 onkeypress="return event.charCode >= 48 && event.charCode <= 57"/>

                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-success" />  <a type="button" class="btn btn-danger" role ="button" asp-controller = "DadosClienteWEB" asp-action = "Cadastrados">Cancelar</a>

            </div>
        </form>
    </div>
</div>
